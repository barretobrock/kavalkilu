[Unit]
Description=hostsapi
After=network.target

[Service]
User=bobrock
Restart=on-failure
WorkingDirectory=/home/bobrock/
ExecStart=/bin/bash -c "source ~/venv/netapi/bin/activate ; ~/kavalkilu/api/hosts/hosts_api.py"


[Install]
WantedBy=multi-user.target
